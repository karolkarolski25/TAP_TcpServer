<Window x:Class="WeatherClient.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherClient"
        mc:Ignorable="d"
        Height="150" Width="300" WindowStyle="None" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="28,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxNewPassword" HorizontalAlignment="Left" Margin="120,54,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="ChangePasswordButton" Content="Change Password" HorizontalAlignment="Left" Margin="140,81,0,0" VerticalAlignment="Top" Width="115" Click="ChangePasswordButton_Click"/>
    </Grid>
</Window>
