<Window x:Class="WeatherClient.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherClient"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        Background="#505461"
        BorderThickness="1"
        BorderBrush="White"
        Height="150" Width="320" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="25,50,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <PasswordBox x:Name="textBoxNewPassword" HorizontalAlignment="Left" Margin="140,54,0,0" VerticalAlignment="Top" Width="150" Foreground="White" Background="Transparent" FontSize="16"/>
        <Button x:Name="ChangePasswordButton" Content="Change Password" HorizontalAlignment="Left" Margin="142,85,0,0" VerticalAlignment="Top" Width="145" Click="ChangePasswordButton_Click" FontSize="16"/>
    </Grid>
</Window>
